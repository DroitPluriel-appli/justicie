{
  "name": "justicie",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "bash:production": "scalingo -a justicie run bash",
    "build": "next build",
    "deadcode": "ts-prune --ignore 'pages'",
    "depcheck": "depcheck",
    "dev": "yarn start:db && next dev",
    "lighthouse": "lhci autorun",
    "lint:css": "stylelint '(components|configuration)/**/*.css'",
    "lint:typescript": "next lint --max-warnings=0",
    "maj_lieux": "ts-node -T backend/infrastructure/controllers/importerDesLieuxCron.ts",
    "migration:up": "npx typeorm-ts-node-commonjs migration:run -d ./database/dataSource.ts",
    "migration:down": "npx typeorm-ts-node-commonjs migration:revert -d ./database/dataSource.ts",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create",
    "psql:local": "docker-compose up -d postgres && docker exec -it justicie_db psql -U justicie justicie",
    "psql:production": "scalingo -a justicie pgsql-console",
    "psql:test": "docker-compose up -d postgres && docker exec -it justicie_db_test psql -U justicie justicie",
    "start": "next start",
    "start:db": "docker-compose down && docker-compose up -d && bash -c \"while ! docker-compose logs | grep -q 'listening on IPv4 address'; do echo 'Waiting for database'; sleep 0.5; done\"; yarn migration:up",
    "test": "NODE_ENV=test yarn migration:up && vitest --run",
    "test:coverage": "yarn test --coverage",
    "test:mutation:frontend": "npx stryker run stryker-frontend.conf.json",
    "test:mutation:backend": "npx stryker run stryker-backend.conf.json",
    "test:ui": "NODE_ENV=test yarn migration:up && vitest --ui",
    "transpile": "tsc --noEmit false",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@googleapis/sheets": "^4.0.1",
    "@sentry/nextjs": "^7.37.2",
    "accessible-autocomplete": "^2.0.4",
    "dotenv-defaults": "^5.0.2",
    "leaflet": "^1.9.3",
    "next": "^13.2.1",
    "next-pwa": "^5.6.0",
    "pg": "^8.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.0",
    "sharp": "^0.31.3",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@jest/types": "^29.4.3",
    "@lhci/cli": "^0.10.0",
    "@stryker-mutator/core": "^6.4.1",
    "@stryker-mutator/jest-runner": "^6.4.1",
    "@stryker-mutator/typescript-checker": "^6.4.1",
    "@swc/core": "^1.3.18",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/jest": "^29.4.0",
    "@types/leaflet": "^1.9.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "@vitejs/plugin-react": "^3.0.1",
    "@vitest/coverage-istanbul": "^0.28.3",
    "@vitest/ui": "^0.28.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "next-router-mock": "^0.9.2",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.2",
    "ts-node": "^10.9.1",
    "ts-prune": "^0.10.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1"
  },
  "engines": {
    "node": "18.12.1"
  },
  "packageManager": "yarn@3.3.0"
}
