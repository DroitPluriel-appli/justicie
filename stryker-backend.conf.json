{
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-backend.html" },
  "ignorePatterns": ["**/.!(env.test)*", "build", "coverage", "lighthouse-ci-reports", "pages", "public", "reports"],
  "ignoreStatic": true,
  "logLevel": "info",
  "mutate": [
    "backend/infrastructure/gateways/**/*.ts",
    "!backend/**/*.test.ts"
  ],
  "packageManager": "yarn",
  "reporters": ["html"],
  "testRunner": "vitest"
}
