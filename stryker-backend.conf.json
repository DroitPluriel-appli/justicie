{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "buildCommand": "pnpm run transpile",
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-backend.html" },
  "ignorePatterns": [".github", ".lighthouseci", ".next", ".vscode", ".yarn", "coverage", "lighthouse-ci-reports", "out", "pages", "public"],
  "ignoreStatic": false,
  "jest": {
    "config": {
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "testMatch": [
        "<rootDir>/backend/**/*(*.)@(test).js"
      ]
    },
    "configFile": "jest-for-mutation-testing.json"
  },
  "mutate": [
    "backend/infrastructure/**/*.ts",
    "!backend/**/*.test.ts"
  ],
  "packageManager": "pnpm",
  "plugins": [
    "@stryker-mutator/jest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "testRunner": "jest"
}
