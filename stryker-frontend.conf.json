{
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-frontend.html" },
  "ignorePatterns": ["**/.!(env.test)*", "build", "coverage", "lighthouse-ci-reports", "app", "public", "reports"],
  "ignoreStatic": true,
  "logLevel": "info",
  "mutate": [
    "components/**/*.ts?(x)",
    "!components/**/*.test.tsx",
    "!components/PageAccueil/**/*.tsx",
    "!components/PageMentionsLegales/**/*.tsx",
    "!components/PagePolitiqueDeConfidentialite/**/*.tsx",
    "!components/PageNosPartenaires/**/*.tsx",
    "!components/PageFoireAuxQuestions/**/*.tsx",
    "!components/PageRechercherParHandicap/**/*.tsx"
  ],
  "packageManager": "yarn",
  "reporters": ["html"],
  "testRunner": "vitest"
}
