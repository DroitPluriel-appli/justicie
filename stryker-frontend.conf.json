{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "buildCommand": "npm run transpile",
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-frontend.html" },
  "ignorePatterns": [".github", ".lighthouseci", ".next", ".vscode", ".yarn", "coverage", "lighthouse-ci-reports", "out", "pages", "public"],
  "ignoreStatic": false,
  "jest": {
    "configFile": "jest-for-mutation-testing.json"
  },
  "mutate": [
    "components/**/*.ts?(x)",
    "!components/**/*.test.tsx"
  ],
  "packageManager": "npm",
  "testRunner": "jest"
}
